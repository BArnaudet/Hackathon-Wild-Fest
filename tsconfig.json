{
    "include": ["./src/**/*"],
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "sourceMap": true,
        "noImplicitAny": false,
        "lib": ["dom", "esnext"],
        "jsx": "react",
        "allowJs": true,
        "strict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmit": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@app/*": ["src/app/*"],
            "@components/*": ["src/components/*"],
            "@data/*": ["src/data/*"],
            "@models/*": ["src/models/*"],
            "@styles/*": ["src/styles/*"],
            "@utils/*": ["utils/*"]
        },
        "typeRoots": ["./types", "./node_modules/@types"]
    },
    "exclude": ["node_modules", "typings"]
}
